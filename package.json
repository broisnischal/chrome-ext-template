  "scripts": {
    "start": "tsc",
    "cmd": "kill-port --silent 8080 2>/dev/null || true && cross-env NODE_ENV=development bun run hot-reload-server.ts",
    "watch": "npm-run-all cmd",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles \"src/**/*\" \"manifest.json\" \"public/**/*\" \"!**/*.ts\" \"!**/*.tsx\" dist",
    "build": "npm-run-all clean start copy-assets",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm-run-all build changeset publish"
  },
